extends layout

block body
	div.container-fluid(ng-controller='AppCtrl')
		div.navbar.navbar-fixed-top.navbar-inverse.pl-nav
			div.container
				div.pl-logo
				div
					a.navbar-brand(href='#') THE PRINTLAB
					p.navbar-text.pull-right [#{env}]
					ul.nav.navbar-nav
						li(ng-repeat='item in menu', active-link='active', href='{{item.href}}')
							a(href='{{item.href}}') {{item.name}}

	div.container      
		div
			div(ng-view)

	script(src='js/lib/underscore.min.js')
	script(src='js/lib/moment.min.js')
	script(src='js/lib/angular/angular.js')
	script(src='js/lib/ui-bootstrap-tpls-0.5.0.min.js')
	script(src='js/app.js')
	script(src='js/services.js')
	script(src='js/controllers.js')
	script(src='js/filters.js')
	script(src='js/directives.js')
	script(src='js/lib/jquery/jquery-1.9.1.min.js')
	script(src='bootstrap/js/bootstrap.min.js')
	script(src='http://yandex.st/highlightjs/7.3/highlight.min.js')

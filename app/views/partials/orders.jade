div
	div.btn-group(ng-class='{open: open}').pull-right
		button.btn Filter by Status
		button.btn.dropdown-toggle(ng-click='open=!open')
			span.caret
		ul.dropdown-menu(aria-labelledby='dropdownMenu')
			li
				a(ng-click='checkAll()', href='javascript:')
					span.glyphicon.glyphicon-ok-sign
					|   Check All
			li
				a(ng-click='selectedOrderStatus=[]', href='javascript:')
					span.glyphicon.glyphicon-remove-sign
					|  Uncheck All
			li.divider
			li(ng-repeat='status in statuslist')
				a(ng-click='setSelectedOrder()', href='javascript:') {{status.name}}
					span(ng-class='isChecked(status.id)')

div
	table.table
		thead
			tr
				th DATE
				th ORDER ID
				th CLIENT ID
				th PROVINCIA
				th COMUNA
				th PHOTOS
				th TOTAL
				th STATUS
		tbody(ng-repeat='order in filtered = (orders | orderStatusFilter:selectedOrderStatus)')
			tr.accordion-toggle(data-toggle='collapse',data-target='\#{{order._id}}')
				td {{order._id.datePretty()}}
				td 
					small {{order._id}}
				td 
					small {{order.client._id}}
				td {{order.address.provincia}}
				td {{order.address.comuna}}
				td {{order.photo_ids.length}}
				td ${{order.cost_total}}
				td {{order.status}}
			tr(style='border-collapse:separate')
				td.hidden-row(colspan='12')
					div.accordion-body.collapse.hidden-content(id='{{order._id}}')
						div.row
							div.col-lg-6
								span.glyphicon.glyphicon-envelope  SHIPPING
								p NAME: {{order.address.name}} {{order.address.last_name}}
								p ADDRESS: {{order.address.address_line1}} {{order.address.address_line2}} | {{order.address.region}} | {{order.address.comuna}}
							div.col-lg-6	
								span.glyphicon.glyphicon-user  CLIENT
								p EMAIL: {{order.client.email}}
								p PHONE: {{order.client.mobile}}
						div.row
							div.col-lg-6
								span.glyphicon.glyphicon-camera  PHOTOS
								p QTY: {{order.photo_ids.length}}
								p ZIP PACKAGE: 
							div.col-lg-6
								span.glyphicon.glyphicon-usd  COSTS
								p PRINTING: ${{order.cost_printing}}
								p SHIPPING: ${{order.cost_shipping}}
								p TOTAL ${{order.cost_total}}
						div.row()
							div.col-lg-6
								span.glyphicon.glyphicon-cog  ACTIONS
								p
								div.btn-group
									button.btn.btn-default.btn-sm SET PRINTING
									button.btn.btn-default.btn-sm SET SHIPPING
									confirm-delete(deletefx='orderDelete(\'{{order._id}}\')')
									//button.btn.btn-danger.btn-sm(popover-confirm='deleteOrder(\'{{order._id}}\')') DELETE
							div.col-lg-6(ng-class='isGift(order.gift)')
								span.glyphicon.glyphicon-gift  FOR GIFT!
								p GIFT MESSAGE: {{order.gift.message}}

